<h1>Editing Document</h1>

<%# render 'form', document: @document %>
<%= form_with(model: @document, url: group_report_document_path, method: "patch") do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
</div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>


<% end %>

